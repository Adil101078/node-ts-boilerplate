{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "./build/server.js",
  "scripts": {
    "create:identifier": "npx randomstring > run-identifier.txt",
    "postinstall": "npm run prepare && npm run create:identifier",
    "prepare": "husky install",
    "pm2:start": "pm2 start npm --name=\"typescript-boilerplate\" -- start",
    "pm2:restart": "pm2 restart \"typescript-boilerplate\"",
    "pm2:delete": "pm2 delete \"typescript-boilerplate\"",
    "start": "npm run build:clean && cross-env node --no-warnings ./build/server.js",
    "start:ts": "npm run create:identifier && node --inspect -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/server.ts",
    "build": "npx tsc",
    "build:clean": "rimraf build && npx tsc",
    "lint": "eslint --fix . --ext .ts",
    "copy-env": "cp .env.sample .env"
  },
  "author": "Adil Ansari",
  "license": "ISC",
  "dependencies": {
    "agenda": "^5.0.0",
    "api-query-params": "^5.4.0",
    "axios": "^1.1.3",
    "bcrypt": "^5.1.1",
    "body-parser": "*",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongoose": "^6.13.0",
    "multer": "^1.4.5-lts.1",
    "mustache": "^4.2.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    "randomstring": "^1.2.3",
    "tracetrail": "^0.1.5",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-loki": "^6.0.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.189",
    "@types/morgan": "^1.9.3",
    "@types/mustache": "^4.2.1",
    "@types/node": "^18.11.9",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "morgan": "^1.10.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.0.3"
  },
  "_moduleAliases": {
    "@modules": "build/modules",
    "@models": "build/models",
    "@config": "build/core/config",
    "@core": "build/core",
    "@middlewares": "build/middlewares",
    "@helpers": "build/helpers",
    "@jobs": "build/jobs",
    "@standalones": "build/standalones"
  }
}
